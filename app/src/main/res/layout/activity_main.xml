<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/register_name"
        android:layout_width="269dp"
        android:layout_height="18dp"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        android:text="Nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btBack2" />

    <EditText
        android:id="@+id/fieldName"
        android:layout_width="269dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="5dp"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_name" />

    <TextView
        android:id="@+id/register_email"
        android:layout_width="269dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="E-mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fieldName" />

    <EditText
        android:id="@+id/fieldEmail"
        android:layout_width="269dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_email" />

    <TextView
        android:id="@+id/register_CPF"
        android:layout_width="269dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="CPF ou CNPJ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fieldEmail" />

    <EditText
        android:id="@+id/fieldCPF"
        android:layout_width="269dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_CPF" />

    <TextView
        android:id="@+id/register_phone"
        android:layout_width="269dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="Celular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fieldCPF" />

    <EditText
        android:id="@+id/fieldPhone"
        android:layout_width="269dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_phone" />

    <TextView
        android:id="@+id/register_password"
        android:layout_width="269dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="Senha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fieldPhone" />

    <EditText
        android:id="@+id/fieldPassword"
        android:layout_width="269dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/azul"
        android:onClick="salvar"
        android:text="Cadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fieldPassword" />

    <ImageButton
        android:id="@+id/btBack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

</android.support.constraint.ConstraintLayout>